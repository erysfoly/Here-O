{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Réinitialisation de mon mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h2>Réinitialisation de mon mot de passe</h2>
        <div class="w-50 mx-auto pt-4">
            {{ form_start(resetForm) }}
            <div class="py-1">
                {{ form_row(resetForm.plainPassword) }}
            </div>

            <div class="text-center pt-3">
                <button class="btn btn-primary">Je change mon mot de passe</button>
            </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
