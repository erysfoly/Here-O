{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Ajout d'une quête{% endblock %}

{% form_theme form _self %}

{%- block choice_widget_expanded -%}
    <div {{ block('widget_container_attributes') }}>
        {%- for child in form %}
            <div class="w-50 d-flex pb-2">
                {{ form_widget(child) }}
                {{ form_label(child) }}
            </div>
        {% endfor -%}
    </div>
{%- endblock choice_widget_expanded -%}

{% block body %}
    <div class="container">
        <h2>Crée une quête</h2>
        <div class="w-50 m-auto">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {{ form(form) }}
            {% else %}
                <p>
                    Tu dois être connecté.e pour créer une nouvelle quête.
                </p>
                <p>
                    <a class="btn btn-primary" href="{{ path("app_login") }}" title="Se connecter">Je me connecte !</a>
                    <a class="btn btn-primary" href="{{ path("app_register") }}" title="Créer un compte">Je n'ai pas de compte, j'en crée un !</a>
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}