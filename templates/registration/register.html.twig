{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Créer un compte{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container">
        <div class="row">
            <div class="bg-light mt-4 p-4">
                <h1>Je crée mon compte !</h1>

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.username, {
                        label:"Nom d'utilisateur"
                    }) }}
                    {{ form_row(registrationForm.email, {
                        label:"Email"
                    }) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms, {
                        label: "J'accepte les conditions d'utilisation du site"
                    }) }}

                    <input type="hidden" name="_target_path"
                           value="{{ app.request.headers.get('referer') }}"
                    >
                    <button type="submit" class="btn btn-lg btn-primary float-end">Créer mon compte</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
